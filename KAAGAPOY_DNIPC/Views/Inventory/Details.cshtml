                                <input class="form-check-input" ng-disabled="isPasalubong" ng-click="showDatetime()" type="radio" value="dosPuntos" name="kaagapay" id="kaagapay">
                                <label class="form-check-label" for="flexRadioDefault2">
                                    DosPuntos
                                </label>
                            </div>
